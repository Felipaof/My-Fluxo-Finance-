<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/global.css">
  <link rel="stylesheet" href="/css/dashboard.css">
  <link rel="stylesheet" href="/css/transacoes.css">
</head>
<body class="<%= pageClass %>">
  <%- include('components/navbar', { user: user }) %>
  
  <div class="dashboard-container">
    <%- include('components/sidebar', { activeMenu: 'transacoes' }) %>

    <main class="dashboard-main">
      <div class="dashboard-header">
        <h1>Transa√ß√µes</h1>
        <p>Gerencie suas receitas e despesas</p>
        <button class="btn-add-transaction" onclick="openTransactionModal()">
          <i>‚ûï</i> Nova Transa√ß√£o
        </button>
      </div>

      <!-- Filtros -->
      <div class="filters-section">
        <div class="filters-group">
          <select id="filter-tipo" class="filter-select">
            <option value="">Todos os tipos</option>
            <option value="entrada">Receitas</option>
            <option value="saida">Despesas</option>
          </select>
          
          <select id="filter-categoria" class="filter-select">
            <option value="">Todas as categorias</option>
            <!-- Categorias ser√£o carregadas via JavaScript -->
          </select>
          
          <input type="date" id="filter-data-inicio" class="filter-input" placeholder="Data in√≠cio">
          <input type="date" id="filter-data-fim" class="filter-input" placeholder="Data fim">
          
          <button class="btn-filter" onclick="aplicarFiltros()">
            <i>üîç</i> Filtrar
          </button>
          
          <button class="btn-clear-filters" onclick="limparFiltros()">
            <i>üóëÔ∏è</i> Limpar
          </button>
        </div>
      </div>

      <!-- Resumo -->
      <div class="stats-grid">
        <div class="stat-card receitas">
          <div class="stat-icon">üìà</div>
          <div class="stat-info">
            <h3>Total Receitas</h3>
            <p class="stat-value" id="total-receitas-periodo">R$ 0,00</p>
            <span class="stat-count" id="count-receitas">0 transa√ß√µes</span>
          </div>
        </div>

        <div class="stat-card despesas">
          <div class="stat-icon">üìâ</div>
          <div class="stat-info">
            <h3>Total Despesas</h3>
            <p class="stat-value" id="total-despesas-periodo">R$ 0,00</p>
            <span class="stat-count" id="count-despesas">0 transa√ß√µes</span>
          </div>
        </div>

        <div class="stat-card saldo">
          <div class="stat-icon">üí∞</div>
          <div class="stat-info">
            <h3>Saldo do Per√≠odo</h3>
            <p class="stat-value" id="saldo-periodo">R$ 0,00</p>
            <span class="stat-count" id="count-total">0 transa√ß√µes</span>
          </div>
        </div>
      </div>

      <!-- Lista de Transa√ß√µes -->
      <div class="dashboard-section">
        <div class="section-header">
          <h2>Suas transa√ß√µes</h2>
          <div class="section-actions">
            <button class="btn-export" onclick="exportarTransacoes()">
              <i>üìä</i> Exportar
            </button>
          </div>
        </div>
        
        <div class="transactions-container">
          <div class="transactions-header">
            <div class="th-data">Data</div>
            <div class="th-descricao">Descri√ß√£o</div>
            <div class="th-categoria">Categoria</div>
            <div class="th-tipo">Tipo</div>
            <div class="th-valor">Valor</div>
            <div class="th-acoes">A√ß√µes</div>
          </div>
          
          <div class="transactions-list" id="transactions-list">
            <!-- Transa√ß√µes ser√£o carregadas via JavaScript -->
          </div>
        </div>
        
        <!-- Loading -->
        <div class="loading-container" id="loading-transactions">
          <div class="loading-spinner">
            <div class="spinner"></div>
            <p>Carregando transa√ß√µes...</p>
          </div>
        </div>
      </div>
    </main>
  </div>

  <!-- Modal para Nova/Editar Transa√ß√£o -->
  <div class="modal-overlay" id="transaction-modal">
    <div class="modal-content">
      <div class="modal-header">
        <h3 id="modal-title">Nova Transa√ß√£o</h3>
        <button class="modal-close" onclick="closeTransactionModal()">√ó</button>
      </div>
      
      <form id="transaction-form" class="modal-form">
        <input type="hidden" id="transaction-id">
        
        <div class="form-group">
          <label for="descricao">Descri√ß√£o</label>
          <input type="text" id="descricao" name="descricao" required>
          <span class="error-message" id="descricao-error"></span>
        </div>
        
        <div class="form-row">
          <div class="form-group">
            <label for="valor">Valor</label>
            <input type="number" id="valor" name="valor" step="0.01" min="0" required>
            <span class="error-message" id="valor-error"></span>
          </div>
          
          <div class="form-group">
            <label for="tipo_entrada">Tipo</label>
            <select id="tipo_entrada" name="tipo_entrada" required>
              <option value="">Selecione...</option>
              <option value="entrada">Receita</option>
              <option value="saida">Despesa</option>
            </select>
            <span class="error-message" id="tipo_entrada-error"></span>
          </div>
        </div>
        
        <div class="form-row">
          <div class="form-group">
            <label for="categoria_id">Categoria (opcional)</label>
            <select id="categoria_id" name="categoria_id">
              <option value="">Selecione uma categoria...</option>
              <!-- Categorias ser√£o carregadas via JavaScript -->
            </select>
            <span class="error-message" id="categoria_id-error"></span>
          </div>

          <div class="form-group">
            <label for="data_criacao">Data</label>
            <input type="date" id="data_criacao" name="data_criacao" required>
            <span class="error-message" id="data_criacao-error"></span>
          </div>
        </div>
        
        <div class="modal-actions">
          <button type="button" class="btn-secondary" onclick="closeTransactionModal()">
            Cancelar
          </button>
          <button type="submit" class="btn-primary" id="save-transaction-btn">
            <span class="btn-text">Salvar</span>
            <span class="btn-loading">Salvando...</span>
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Scripts -->
  <script src="/js/common.js"></script>
  <script src="/js/api.js"></script>
  <script src="/js/transacoes.js"></script>
</body>
</html>